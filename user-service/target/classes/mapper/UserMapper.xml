<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eureka.dto.UserDAO">

    <insert id="setupNewTeacher" parameterType="com.eureka.vo.TeacherVO">
        INSERT IGNORE INTO T_USER_TEACHERS
          (TEACHER_ID,USER_NAME,USER_PASSWORD,USER_PHONE,RESEARCH_AREA)
        VALUE
          (#{teacherId},#{userName},#{userPassword},#{userPhone},#{researchArea})
    </insert>

    <select id="selectTeacherInfoByTeacherId" resultType="com.eureka.vo.TeacherVO" parameterType="String">
        SELECT
          TEACHER_ID,
          USER_NAME,
          USER_PASSWORD,
          USER_PHONE,
          RESEARCH_AREA,
          USER_SEX,
          USER_AGE,
          CREATE_TIME
        FROM
          T_USER_TEACHERS
        WHERE
          TEACHER_ID = #{teacherId}
    </select>

    <insert id="setupNewStudent" parameterType="Map">
         INSERT INTO T_USER_STUDENTS
          (STUDENT_ID,USER_NAME,USER_PASSWORD,USER_PHONE,SCHOOL_CLASS,USER_SEX,USER_AGE)
        VALUE
          (#{STUDENT_ID},#{USER_NAME},#{USER_PASSWORD},#{USER_PHONE},#{SCHOOL_CLASS},#{USER_SEX},#{USER_AGE})

    </insert>

    <select id="selectStudentInfoByStudentId" resultType="Map" parameterType="List">
        SELECT
          STUDENT_ID,
          USER_NAME,
          USER_PASSWORD,
          USER_PHONE,
          SCHOOL_CLASS,
          USER_SEX,
          USER_AGE,
          CREATE_TIME
        FROM
          T_USER_STUDENTS
        WHERE
          STUDENT_ID = #{studentId}
    </select>

</mapper>